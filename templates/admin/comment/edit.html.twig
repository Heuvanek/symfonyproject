{% extends 'admin/base.html.twig' %}

{% block title %}Modification du commentaire n°{{comment.id}}{% endblock %}
{# {% form_theme form _self %} #}
{% block body %}
    <div class="container">
        <h1 class="my-4">Modification du commentaire n°{{comment.id}}</h1>
        <div class="row">
            <div class="col-sm-6 vertical-divider">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="my-3">Informations sur le commentaire :</h4>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Date de création</th>
                                    <th>Annonce du commentaire</th>
                                    <th>Auteur</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>{{comment.id}}</td>
                                    <td>{{comment.createdAt | date('d/m/Y H:i') }}</td>
                                    <td>{{comment.ad.title}}</td>
                                    <td>{{comment.author.fullName}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="my-3">Modifier le commentaire : </h4>
                    </div>
                    <div class="card-body">
                        {{form_start(form)}}
                        {{form_widget(form)}}
                        <button type="submit" class="btn btn-primary">
                        <i class="fas fa-pen">&nbsp;&nbsp;</i>Enregistrer les modifications
                        </button>
                        {{ form_end(form) }}                    
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
