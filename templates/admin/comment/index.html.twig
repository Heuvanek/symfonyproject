{% extends 'admin/base.html.twig' %}
{% block title %}Administration des commentaires{% endblock %}
{% block body %}
<div class="container-fluid">
    <h1 class="my-3 h2">Gestion des commentaires</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th class="short-col">Annonce</th>
                <th>Auteur</th>
                <th>Date de cr√©ation</th>
                <th>Note</th>
                <th class="short-col">Avis</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for comment in paginator.data %}
            <tr>
                <td>{{ comment.id }}</td>
                <td class="short-col">{{ comment.ad.title}}</td>
                <td><img src="{{comment.author.picture}}" alt="avatar de {{comment.author.fullName}}" class="avatar avatar-mini mr-2">{{comment.author.fullName}}</td>
                <td>{{ comment.createdAt | date('d/m/Y H:i')}}</td>
                <td><span class="badge badge-primary rounded">{{ comment.rating }}</span></td>
                <td class="short-col">{{ comment.content }}</td>
                <td>
                    <a href="{{path('admin_comments_edit', {'id':comment.id})}}" class="btn btn-primary"><i class="fas fa-edit">&nbsp;</i></a>
                    <a href="{{path('admin_comments_delete', {'id':comment.id})}}" class="btn btn-danger"><i class="fas fa-trash">&nbsp;</i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ paginator.display() }}
</div>
</div>
{% endblock %}
