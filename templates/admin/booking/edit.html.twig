{% extends 'admin/base.html.twig' %}

{% block title %}Modification de la réservation n°{{booking.id}}{% endblock %}
{# {% form_theme form _self %} #}
{% block body %}
    <div class="container">
        <h1 class="my-4">Modification de la réservation n°{{booking.id}}</h1>
        <div class="row">
            <div class="col-sm-7 vertical-divider">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="my-3">Informations sur la réservation :</h4>      
                    </div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>création</th>
                                    <th class="short-col-2">Annonce</th>
                                    <th>tarif</th>
                                    <th>Réserveur</th>
                                    <th>Auteur</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>{{booking.id}}</td>
                                    <td>{{booking.createdAt | date('d/m/Y H:i') }}</td>
                                    <td class="short-col-2">{{booking.ad.title}}</td>
                                    <td>{{booking.ad.price | number_format(2,',',' ')}}&euro;</td>
                                    <td>{{booking.booker.fullName}}</td>
                                    <td>{{booking.ad.author.fullName}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-sm-5">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="my-3">Modifier la réservation : </h4>
                    </div>
                    <div class="card-body">
                        {{form_start(form)}}
                        {{form_widget(form)}}
                        <button type="submit" class="btn btn-primary">
                        <i class="fas fa-pen">&nbsp;&nbsp;</i>Enregistrer les modifications
                        </button>
                        {{ form_end(form) }}            
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
