{% extends 'base.html.twig' %}

{% block title %}
    Modifier votre profil
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Modification du profil</h1> 
        {{ form_start(form) }}
        <div class="row">
            <div class="col-sm-6 col-12">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Informations générales</h2>
                    <hr>
                    {{form_row(form.firstName)}}
                    {{form_row(form.lastName)}}
                    {{form_row(form.email)}}
                    {{form_row(form.picture)}}
                </div>
            </div>
            <div class="col-sm-6 col-12">
                <div class="alert alert-light">
                    <h2 class="alert alert-heading">Détails</h2>
                 {{form_row(form.introduction)}}
                 {{form_row(form.description)}}
                 <hr>
                 <p>Si vous avez terminé vos modifications vous pouvez les enregistrer</p>
                <button  type="submit" class="btn btn-primary"> <i class="fas fa-check">&nbsp;</i>
                Enregistrer les modifications</button>
                {{ form_end(form) }}
                </div>
            </div>
        </div>
</div>
{% endblock %}