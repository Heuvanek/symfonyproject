{% extends 'base.html.twig' %}

{% block title %}Connectez-vous !{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="bg-light py-3 px-3">
                <h1>Connectez vous !</h1>

                {% if hasError %}
                    <div class="alert alert-danger">Mauvais nom d'utilisateur ou mauvais mot de passe</div>
                {% endif %}
                <form action="{{ path('account_login')}}" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input value="{{username}}"type="text" name="_username" id="email" class="form-control" placeholder="Adresse email" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required>   
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success">
                            Connexion ! 
                        </button>
                    </div>
                </form>
            </div>
        </div>
     </div>
</div>

{% endblock %}
